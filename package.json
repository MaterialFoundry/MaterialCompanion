{
  "name": "material-companion",
  "productName": "Material Companion",
  "version": "1.0.3",
  "description": "Companion app for the Material Foundry modules and hardware",
  "main": "src/main.js",
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    },
    {
      "lang": "nl",
      "name": "Nederlands",
      "path": "lang/nl.json"
    }
  ],
  "scripts": {
    "start": "electron .",
    "start-dev": "electron . dev",
    "start-forge": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make --omit=dev"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/app/images/icons"
      },
      "make-target": {
        "win32": [
          "zip"
        ],
        "darwin": [
          "dmg",
          "zip"
        ],
        "linux": [
          "zip"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "materialcompanion"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            [
              "win32",
              "darwin",
              "linux"
            ]
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {}
        }
      ]
    }
  },
  "author": "Material Foundry <info@materialfoundry.nl>",
  "license": "MIT",
  "copyright": "Copyright Â© 2023 Material Foundry",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "electron": "^28.2.3",
    "electron-wix-msi": "^5.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "decompress": "^4.2.1",
    "easymidi": "^3.0.1",
    "electron-forge": "^5.2.4",
    "electron-settings": "^4.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "esptool-js": "^0.4.1",
    "ip": "^1.1.8",
    "open": "^10.0.2",
    "serialport": "^12.0.0",
    "ws": "^8.13.0"
  }
}
